[push]
    default = simple
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[core]
    editor = /usr/local/bin/nvim
    excludesFile = ~/.config/git/ignore
	commitGraph = true
[credential]
    helper = osxkeychain
[alias]
    lg = "!. ~/.config/git/helpers/log && pretty_git_log"
    lga = "!. ~/.config/git/helpers/log && pretty_git_log --all"
    st = status
    ci = commit
    co = checkout
    br = branch -avv
    oldest-ancestor = !zsh -c 'diff --old-line-format='' --new-line-format='' <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | head -1' -
    unmerged = branch -r --no-merged origin/master # Show all the branches not merged into master
    poc = "! git push origin $(git rev-parse --abbrev-ref HEAD)"
[rerere]
    enabled = true
    autoupdate = true
[color]
    ui = auto
    diff = true
[pull]
    rebase = true
[user]
    name = Amit Shah
    email = amit@amwam.me
    useconfigonly = true
	signingkey = 55B7DAF14DC93D41E5366F41E1F5655244860868
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
[diff]
    compactionHeuristic = true
    tool = vimdiff
	colorMoved = true
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[use]
    signingkey = 75E4F19E
[difftool]
    prompt = false
[commit]
	gpgsign = false
[gpg]
	program = gpg
